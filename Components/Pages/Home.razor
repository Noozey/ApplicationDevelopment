@page "/"
@using MauiApp2.Services
@inject JournalState JournalState

@if (JournalState.ShowEditor)
{
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-foreground">Today's Entry</h2>
            <button onclick="toggleEditor()" class="text-secondary-foreground hover:text-foreground transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
            </button>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-medium text-foreground mb-2">
                How are you feeling today? <span class="text-destructive">*</span>
            </label>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div>
                    <p class="text-xs font-semibold text-success-foreground mb-2">POSITIVE</p>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-success-light text-success-foreground border-success hover-bg transition-colors">Happy</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-success-light text-success-foreground border-success hover-bg transition-colors">Excited</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-success-light text-success-foreground border-success hover-bg transition-colors">Relaxed</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-success-light text-success-foreground border-success hover-bg transition-colors">Grateful</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-success-light text-success-foreground border-success hover-bg transition-colors">Confident</button>
                </div>
                <div>
                    <p class="text-xs font-semibold text-info-foreground mb-2">NEUTRAL</p>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-muted text-info-foreground border-info hover-bg transition-colors">Calm</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-muted text-info-foreground border-info hover-bg transition-colors">Thoughtful</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-muted text-info-foreground border-info hover-bg transition-colors">Curious</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-muted text-info-foreground border-info hover-bg transition-colors">Nostalgic</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-muted text-info-foreground border-info hover-bg transition-colors">Bored</button>
                </div>
                <div>
                    <p class="text-xs font-semibold text-destructive-foreground mb-2">NEGATIVE</p>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-red-50 text-destructive-foreground border-destructive hover-bg transition-colors">Sad</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-red-50 text-destructive-foreground border-destructive hover-bg transition-colors">Angry</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-red-50 text-destructive-foreground border-destructive hover-bg transition-colors">Stressed</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-red-50 text-destructive-foreground border-destructive hover-bg transition-colors">Lonely</button>
                    <button class="w-full text-left px-3 py-2 rounded mb-1 border bg-red-50 text-destructive-foreground border-destructive hover-bg transition-colors">Anxious</button>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-medium text-foreground mb-2">
                Secondary Moods (Optional, up to 2)
            </label>
            <div class="flex flex-wrap gap-2">
                <button class="px-3 py-1 rounded-full text-sm border bg-success-light text-success-foreground border-success hover-bg transition-colors">Excited</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-info-foreground border-info hover-bg transition-colors">Calm</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-success-light text-success-foreground border-success hover-bg transition-colors">Grateful</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-info-foreground border-info hover-bg transition-colors">Thoughtful</button>
            </div>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-medium text-foreground mb-2">
                Write your thoughts...
            </label>
            <textarea class="w-full h-64 p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" placeholder="What's on your mind today?" style="font-family: inherit;"></textarea>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-medium text-foreground mb-2">Tags</label>
            <div class="flex flex-wrap gap-2 mb-3">
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-accent-foreground border-accent hover-bg transition-colors">Work</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-accent-foreground border-accent hover-bg transition-colors">Health</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-accent-foreground border-accent hover-bg transition-colors">Personal Growth</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-accent-foreground border-accent hover-bg transition-colors">Exercise</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-accent-foreground border-accent hover-bg transition-colors">Family</button>
                <button class="px-3 py-1 rounded-full text-sm border bg-muted text-accent-foreground border-accent hover-bg transition-colors">Friends</button>
            </div>
            <input type="text" placeholder="Add custom tag..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>

        <div class="flex justify-end gap-3 flex-wrap">
            <button class="px-6 py-2 border border-gray-300 rounded-lg text-secondary-foreground hover-bg flex items-center gap-2 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                <span>Delete</span>
            </button>
            <button class="px-6 py-2 bg-primary text-primary-foreground rounded-lg hover:opacity-90 flex items-center gap-2 transition-opacity">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path><polyline points="17 21 17 13 7 13 7 21"></polyline><polyline points="7 3 7 8 15 8"></polyline></svg>
                <span>Save Entry</span>
            </button>
        </div>
    </div>
    return;
}



